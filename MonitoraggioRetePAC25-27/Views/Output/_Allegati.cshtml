@model MonitoraggioRetePAC25_27.Models.Output
@{
    var files = ViewBag.FileList as List<string> ?? new List<string>();
}

<div class="mt-4 border p-3 rounded">

    <!-- Upload semplificato senza form -->
    <div id="uploadForm"
         class="upload-form"
         data-idoutput="@Model.IdOutput">

        <input type="hidden" name="idOutput" value="@Model.IdOutput" />

        <div class="mb-2">
            <input type="file" name="file" class="form-control form-control-sm" />
        </div>

        <button type="button" class="btn btn-sm btn-success btn-upload">Carica allegati</button>
    </div>

    <!-- Lista File -->
    <div class="mt-3">
        @if (files.Any())
        {
            <ul class="list-group list-group-sm">
                @foreach (var file in files)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@file</span>
                        <div>
                            <a href="@Url.Action("DownloadAllegato", "Output", new { idOutput = Model.IdOutput, fileName = file })"
                               class="btn btn-sm btn-outline-secondary me-1">
                                Download
                            </a>
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-file="@file"
                                    data-idoutput="@Model.IdOutput">
                                Elimina
                            </button>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="text-muted">Nessun allegato presente.</div>
        }
    </div>
</div>

